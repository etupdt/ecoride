{% extends 'base.html.twig' %}

{% block title %}Validation{% endblock %}

{% block body %}

    {{ form_errors(validationForm) }}

    <div class="container my-5">

        <h1 class="h3 mb-3 font-weight-normal">Validez votre voyage</h1>

        {{ form_start(validationForm) }}

            <div class="form-group mx-5 my-3">
                {{ form_row(validationForm.note) }}
            </div>
            <div class="form-group mx-5 my-3">
                {{ form_row(validationForm.avis) }}
            </div>
            <div class="form-group mx-5 my-3">
                {{ form_row(validationForm.validation) }}
            </div>
            <div class="form-group mx-5 my-3">
                {{ form_row(validationForm.commentaire) }}
            </div>

            <div class="d-flex mx-5 mt-3 mb-5">
                <button type="submit" class="btn btn-primary">Enregistrer</button>
                <a href="{{ url('app_participations') }}" class="btn btn-primary mx-2">Abandonner</a>
            </div>

        {{ form_end(validationForm) }}

    </div>

{% endblock %}
