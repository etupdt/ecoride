{% extends 'base.html.twig' %}

{% block title %}Se connecter !{% endblock %}

{% block body %}

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <form method="post" class="container my-5">

        <h1 class="h3 mb-3 font-weight-normal">Veuillez vous connecter</h1>

        <div class="form-group mx-5 my-3 mt-5">
            <label for="_username">Pseudo ou adresse mail</label>
            <input type="text" class="form-control" name="_username" id="_username" aria-describedby="emailHelp" {{ last_username }} required autofocus>
            <small id="emailHelp" class="form-text text-muted">Nous ne diffuserons pas votre email ...</small>
        </div>
        <div class="form-grou mx-5 my-3">
            <label for="_password">Mot de passe</label>
            <input type="password" class="form-control" name="_password" id="_password">
        </div>
        <div class="form-group form-check mx-5 my-3">
            <input type="checkbox" class="form-check-input" name="_remenber_me" id="_remenber_me">
            <label class="form-check-label" for="_remenber_me">Se souvenir de moi</label>
        </div>
        <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">
        <button type="submit" class="btn btn-primary mx-5 mt-3 mb-5">Connexion</button>
        <p class="mx-5 my-3">
            <a href="{{ path('app_register') }}" class="link-primary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">Pas encore inscrit ?</a>
        </p>
        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <input type="checkbox" name="_remember_me" id="_remember_me">
                <label for="_remember_me">Remember me</label>
            </div>
        #}

    </form>
{% endblock %}
