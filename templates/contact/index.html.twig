{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}

    {{ form_errors(contactForm) }}

    <div class="container my-5">

        <h1 class="h3 mb-3 font-weight-normal">Contact</h1>

        {{ form_start(contactForm) }}

            <div class="form-group mx-0 mx-sm-5 my-3">
                {{ form_row(contactForm.email) }}
            </div>

            <div class="form-group mx-0 mx-sm-5 my-3">
                {{ form_row(contactForm.message) }}
            </div>

            <div class="d-flex mx-0 mx-sm-5 mt-3 mb-5">
                <button type="submit" class="btn btn-primary">Envoyer</button>
            </div>

        {{ form_end(contactForm) }}

    </div>

{% endblock %}
