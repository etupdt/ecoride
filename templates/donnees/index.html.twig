{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    {{ form_errors(userForm) }}

    <div class="container my-5">

        {{ form_start(userForm) }}

            {% include 'donnees/donnees.html.twig' %}

            <div class="form-group mx-0 mx-sm-5 my-3">
                {{ form_row(userForm.oldPassword) }}
            </div>

            <div class="d-flex mx-0 mx-sm-5 mt-3 mb-5">
                <button type="submit" class="btn btn-primary">Enregistrer</button>
                <a href="{{ url('accueil') }}" class="btn btn-primary mx-2">Abandonner</a>
            </div>

        {{ form_end(userForm) }}

    </div>

{% endblock %}
